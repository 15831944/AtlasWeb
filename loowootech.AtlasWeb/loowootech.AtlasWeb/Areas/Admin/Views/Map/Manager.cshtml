@{
    ViewBag.Title = "专题图管理";
    int SerialNumber = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<loowootech.AtlasWeb.Models.Map> list = ViewBag.MapList;
}


<div class="container-fluid" style="text-align:left;">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="page-title" style="float:left;">专题图管理</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered">
                <tr>
                    <th>序号</th>
                    <th>名称</th>
                    <th>地图包含</th>
                    <th>显示图片</th>
                    <th>备注</th>
                </tr>
                @foreach (var item in list)
                {
                    <tr>
                        <td>@(SerialNumber++)</td>
                        <td>@(item.Name)</td>
                        <td>@(item.Count)</td>
                        <td>
                            <span class="image" style="background-image:url(@(item.Image))"></span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-xs btn-success" data-toggle="modal" data-target="#Map@(item.ID)"><i class="glyphicon glyphicon-picture"></i>&nbsp;更改图片</button>
                            <div class="modal fade" id="Map@(item.ID)" tabindex="-1" role="dialog" aria-labelledby="MyModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                             
                                        </div>
                                        <div class="modal-body">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </table> 
        </div>
    </div>
</div>

